{
  "manifest_version": 2,
  "name": "CanvasQuizReplay",
  "version": "1.0",

  "description": "Replay canvas quiz you have the answers to",

  "icons": {
    "48": "icons/border-48.png"
  },

  "browser_action": {
    "default_title": "Canvas Quiz Replay - Replay canvas quiz you have the answers to",
    "default_icon": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["CanvasQuizReplay.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "permissions": [
  "storage",
  "activeTab",
  "tabs"
  ]
}
